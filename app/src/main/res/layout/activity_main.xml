<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/correctThree"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toEndOf="@+id/guessThreeCheck"
        app:layout_constraintTop_toBottomOf="@+id/userWordThree"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/userWordThree"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:layout_marginEnd="28dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/guessThree"
        app:layout_constraintTop_toBottomOf="@+id/correctTwo"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/correctTwo"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:layout_marginEnd="28dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/guessTwoCheck"
        app:layout_constraintTop_toBottomOf="@+id/userWordTwo"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/userWordTwo"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintStart_toEndOf="@+id/guessTwo"
        app:layout_constraintTop_toBottomOf="@+id/correctOne"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/correctOne"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintStart_toEndOf="@+id/guessOneCheck"
        app:layout_constraintTop_toBottomOf="@+id/userWordOne"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/userWordOne"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintStart_toEndOf="@+id/guessOne"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/guessThreeCheck"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text="Check #3:"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessThree"
        app:layout_constraintVertical_bias="0.087" />

    <TextView
        android:id="@+id/guessThree"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text="Guess #3:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessTwoCheck"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/guessTwoCheck"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text="Check #2:"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessTwo"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/guessTwo"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text="Guess #2:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessOneCheck"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/guessOneCheck"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text="Check #1:"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessOne"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/guessOne"
        android:layout_width="130dp"
        android:layout_height="51dp"
        android:text="Guess #1:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/keyboard"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:hint="Your Guess"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessThreeCheck"
        app:layout_constraintVertical_bias="0.539" />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:text="Guess"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/keyboard"
        app:layout_constraintTop_toBottomOf="@+id/correctThree"
        app:layout_constraintVertical_bias="0.516" />

    <TextView
        android:id="@+id/correctWord"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/keyboard"
        app:layout_constraintEnd_toEndOf="@+id/correctThree"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/guessThreeCheck"
        app:layout_constraintTop_toBottomOf="@+id/correctThree"
        app:layout_constraintVertical_bias="0.305" />

</androidx.constraintlayout.widget.ConstraintLayout>